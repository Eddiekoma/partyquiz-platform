{
  "name": "partyquiz-platform",
  "version": "1.0.0",
  "private": true,
  "description": "PartyQuiz Platform - Workspaces, Quiz Builder, Live Sessions with Music & Video",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:migrate": "cd apps/web && pnpm prisma migrate deploy",
    "db:migrate:dev": "cd apps/web && pnpm prisma migrate dev",
    "db:studio": "cd apps/web && pnpm prisma studio",
    "db:generate": "cd apps/web && pnpm prisma generate",
    "db:seed": "cd apps/web && pnpm prisma db seed"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
